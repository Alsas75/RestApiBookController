<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="change-price-type-to-float-products" author="Oleksandr Seferov">
        <comment>Изменение таблицы products типа столбца price с DECIMAL на FLOAT</comment>
        <modifyDataType
                tableName="products"
                columnName="price"
                newDataType="FLOAT"/>

        <rollback>
            <modifyDataType
                    tableName="products"
                    columnName="price"
                    newDataType="DECIMAL"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
