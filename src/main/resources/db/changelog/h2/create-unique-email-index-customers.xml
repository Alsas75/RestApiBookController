<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-unique-email-index-customers" author="Oleksandr Seferov">

        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists tableName="customers" indexName="idx_customers_email"/>
            </not>
        </preConditions>

        <comment>Создание уникального индекса на email в customers</comment>
        <createIndex
                tableName="customers"
                indexName="idx_customers_email"
                unique="true">
            <column name="email"/>
        </createIndex>

        <rollback>
            <dropIndex
                    tableName="customers"
                    indexName="idx_customers_email"/>
        </rollback>
    </changeSet>

</databaseChangeLog>