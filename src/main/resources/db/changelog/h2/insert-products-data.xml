<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="insert-products-data" author="Oleksandr Seferov">
        <comment>Заполнение таблицы products</comment>
        <insert tableName="products">
            <column name="id" value="1"/>
            <column name="name" value="Laptop"/>
            <column name="price" value="999.99"/>
            <column name="description" value="High-performance laptop with SSD"/>
        </insert>
        <insert tableName="products">
            <column name="id" value="2"/>
            <column name="name" value="Smartphone"/>
            <column name="price" value="699.50"/>
            <column name="description" value="Latest model with OLED display"/>
        </insert>
        <insert tableName="products">
            <column name="id" value="3"/>
            <column name="name" value="Headphones"/>
            <column name="price" value="149.99"/>
            <column name="description" value="Noise-cancelling wireless headphones"/>
        </insert>

        <rollback>
            <delete tableName="products">
                <where>id IN (1, 2, 3)</where>
            </delete>
        </rollback>
    </changeSet>

</databaseChangeLog>